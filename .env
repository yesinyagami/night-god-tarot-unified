# Night God Tarot - Monica-Only Configuration
# This configuration uses only Monica AI (unlimited usage)
# Perfect for testing and production without paid API costs

# =================================
# MONICA AI CONFIGURATION (REQUIRED)
# =================================
MONICA_API_KEY=your-monica-api-key-here
MONICA_BASE_URL=https://openapi.monica.im
MONICA_TIMEOUT=30000

# Monica-Only Mode (Forces all services to use Monica)
MONICA_ONLY_MODE=true

# =================================
# PAID APIs (DISABLED IN MONICA-ONLY MODE)
# =================================
# Leave these empty to disable paid services
OPENAI_API_KEY=
GOOGLE_API_KEY=
PERPLEXITY_API_KEY=

# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=development
DEBUG=true
DEVELOPMENT_MODE=true
MOCK_AI_RESPONSES=true

# Security  
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
ENCRYPTION_KEY=NightGodTarotSecure2024KeyManager
APP_SECRET=NightGodTarotAppSecret2024Divine

# =================================
# FEATURE FLAGS (MONICA-OPTIMIZED)
# =================================
FEATURE_AI_ORCHESTRATION=true
FEATURE_COLLECTIVE_WISDOM=true
FEATURE_PERSONAL_ANALYSIS=true
FEATURE_POETIC_SUBLIMATION=true

# Monica-specific features
FEATURE_MONICA_UNLIMITED=true
FEATURE_MONICA_FALLBACK=true
FEATURE_MULTI_AI_SIMULATION=true

# =================================
# RATE LIMITING (MONICA-OPTIMIZED)
# =================================
MONICA_RATE_LIMIT=60
MONICA_RATE_WINDOW=60000
MONICA_MAX_CONCURRENT=5

# Disable other service rate limits
OPENAI_RATE_LIMIT=0
GOOGLE_RATE_LIMIT=0
PERPLEXITY_RATE_LIMIT=0

# =================================
# PROXY CONFIGURATION
# =================================
AI_PROXY_ENABLED=true
AI_PROXY_URL=/api/ai-proxy
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# =================================
# PAYMENT SYSTEM
# =================================
# Buy Me a Coffee (for Moon Shadow tier)
BUYMEACOFFEE_PROFILE_URL=https://buymeacoffee.com/nightgodtarot
BUYMEACOFFEE_WEBHOOK_SECRET=nightgod-buymeacoffee-webhook-2024

# iPass Money (for Night God tier)
IPASS_MERCHANT_ID=nightgod-merchant
IPASS_API_KEY=nightgod-ipass-api-2024
IPASS_API_SECRET=nightgod-ipass-secret-2024
IPASS_ENVIRONMENT=sandbox
IPASS_WEBHOOK_URL=/api/webhooks/ipass
IPASS_RETURN_URL=/payment/success
IPASS_CANCEL_URL=/payment/cancel

# =================================
# WEBHOOK CONFIGURATION
# =================================
WEBHOOK_PORT=3002
WEBHOOK_SECRET=nightgod-webhook-secret-2024

# =================================
# MONICA-ONLY OPTIMIZATIONS
# =================================
# Cache Monica responses to maximize efficiency
MONICA_CACHE_ENABLED=true
MONICA_CACHE_TTL=300000

# Intelligent request batching
MONICA_BATCH_REQUESTS=true
MONICA_BATCH_SIZE=3
MONICA_BATCH_DELAY=100

# Smart retry logic
MONICA_SMART_RETRY=true
MONICA_RETRY_EXPONENTIAL=true

# =================================
# MULTI-LANGUAGE SUPPORT
# =================================
USER_LANGUAGE=en
SUPPORT_LANGUAGES=en,zh-TW,zh-CN

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nightgod_tarot
DB_USER=nightgod_user
DB_PASSWORD=nightgod_secure_2024

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=nightgod_redis_2024

# =================================
# STORAGE CONFIGURATION
# =================================
UPLOAD_PATH=/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=png,jpg,jpeg,gif,webp

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=info
LOG_FILE=logs/nightgod.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5