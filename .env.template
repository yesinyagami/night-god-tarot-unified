# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git

# Monica AI Configuration
VITE_MONICA_API_KEY=your-monica-api-key-here
VITE_MONICA_API_URL=https://openapi.monica.im

# DeepSeek API
VITE_DEEPSEEK_API_KEY=your-deepseek-api-key-here
VITE_DEEPSEEK_API_URL=https://api.deepseek.com

# Weather API
VITE_OPENWEATHER_API_KEY=your-openweather-api-key-here
VITE_WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# News API
VITE_NEWS_API_KEY=your-news-api-key-here
VITE_NEWS_API_URL=https://newsapi.org/v2

# Stripe Payment
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key-here
VITE_STRIPE_SECRET_KEY=your-stripe-secret-key-here

# Feature Flags
VITE_ENABLE_AI_READINGS=true
VITE_ENABLE_VOICE_SYNTHESIS=true
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PAYMENT=true

# Security Settings
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_FILE_SIZE=5242880

# Deployment
VITE_DEPLOYMENT_ENV=development
VITE_API_BASE_URL=http://localhost:3000
VITE_CDN_URL=
VITE_SENTRY_DSN=