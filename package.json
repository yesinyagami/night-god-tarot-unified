{
  "name": "night-god-tarot-unified",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-p build:vite build:docs",
    "build:vite": "vite build",
    "build:docs": "cp -r docs/* dist/ 2>/dev/null || true",
    "dev": "vite --host 0.0.0.0 --port 5173",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:unit": "vitest --environment jsdom",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "pages:build": "npm run build && cp -r dist/* docs/",
    "pages:deploy": "npm run pages:build && echo 'Pages built successfully'"
  },
  "dependencies": {
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "pinia": "^2.2.6",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/tsconfig": "^0.7.0",
    "typescript": "~5.6.0",
    "vue-tsc": "^2.1.10",
    "vite": "^5.4.0",
    "vitest": "^2.1.4",
    "@types/node": "^22.9.0",
    "eslint": "^9.15.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "eslint-plugin-vue": "^9.30.0",
    "typescript-eslint": "^8.13.0",
    "npm-run-all2": "^7.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}