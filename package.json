{
  "name": "night-god-tarot-unified",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:vite && npm run build:docs",
    "build:vite": "vite build --mode production",
    "build:docs": "cp -r docs/* dist/ 2>/dev/null || true",
    "dev": "vite --host 0.0.0.0 --port 5173",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:unit": "vitest --environment jsdom",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "pages:build": "npm run build && cp -r dist/* docs/",
    "pages:deploy": "npm run pages:build && echo 'Pages built successfully'"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "axios": "^1.7.7",
    "pinia": "^2.2.6",
    "vue": "^3.5.12",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/ui": "^2.1.9",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.15.0",
    "eslint-plugin-vue": "^9.30.0",
    "jsdom": "^26.1.0",
    "npm-run-all2": "^7.0.1",
    "typescript": "~5.6.0",
    "typescript-eslint": "^8.13.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.9",
    "vue-tsc": "^2.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
