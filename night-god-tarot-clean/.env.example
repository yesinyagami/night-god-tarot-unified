# Night God Tarot - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys
# NEVER commit actual API keys to version control

# Application Environment
NODE_ENV=development
DEBUG=true

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_ORG_ID=your-org-id-optional
OPENAI_TIMEOUT=30000

# Monica AI Configuration
MONICA_API_KEY=sk-your-monica-api-key-here
MONICA_BASE_URL=https://api.monica.im
MONICA_TIMEOUT=30000

# Google AI Configuration
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=your-project-id-optional
GOOGLE_TIMEOUT=30000

# Perplexity AI Configuration
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_TIMEOUT=30000

# Security Configuration
KEY_ROTATION_ENABLED=true
KEY_ROTATION_INTERVAL=30
KEY_ROTATION_WARNING=7

# AI Proxy Configuration
AI_PROXY_ENABLED=true
AI_PROXY_URL=/api/ai-proxy
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
FEATURE_AI_ORCHESTRATION=true
FEATURE_COLLECTIVE_WISDOM=true
FEATURE_PERSONAL_ANALYSIS=true
FEATURE_POETIC_SUBLIMATION=true

# Encryption Settings
ENCRYPTION_KEY=your-32-character-encryption-key-here
APP_SECRET=your-app-secret-key-here