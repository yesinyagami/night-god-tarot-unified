# Night God Tarot - Environment Configuration Template
# Copy this file to .env and replace with your actual values

# =================================
# GITHUB API CONFIGURATION
# =================================
GITHUB_TOKEN=your-github-token-here
VITE_GITHUB_TOKEN=your-github-token-here
GITHUB_API_KEY=your-github-api-key-here
VITE_GITHUB_API_KEY=your-github-api-key-here

# =================================
# ANTHROPIC CLAUDE API CONFIGURATION 
# =================================
CLAUDE_API_KEY=your-claude-api-key-here
VITE_CLAUDE_API_KEY=your-claude-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
VITE_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =================================
# MONICA AI CONFIGURATION
# =================================
MONICA_API_KEY=your-monica-api-key-here
VITE_MONICA_API_KEY=your-monica-api-key-here
MONICA_BASE_URL=https://openapi.monica.im
MONICA_TIMEOUT=30000

# =================================
# VERCEL V0 AI CONFIGURATION
# =================================
VERCEL_TOKEN=your-vercel-token-here
VITE_VERCEL_TOKEN=your-vercel-token-here
VERCEL_V0_API_URL=https://v0.dev/api

# =================================
# WEATHER & NEWS API CONFIGURATION
# =================================
OPENWEATHER_API_KEY=your-openweather-api-key-here
VITE_OPENWEATHER_API_KEY=your-openweather-api-key-here
NEWS_API_KEY=your-news-api-key-here
VITE_NEWS_API_KEY=your-news-api-key-here
IPGEOLOCATION_API_KEY=your-ipgeolocation-api-key-here
VITE_IPGEOLOCATION_API_KEY=your-ipgeolocation-api-key-here
CURRENTS_API_KEY=your-currents-api-key-here

# Monica-Only Mode Settings
MONICA_ONLY_MODE=true
MONICA_UNLIMITED_MODE=true
DISABLE_WEATHER=true
DISABLE_NEWS=true

# =================================
# SECURITY - GENERATE YOUR OWN SECRETS
# =================================
JWT_SECRET=generate-a-secure-jwt-secret-at-least-32-chars
ENCRYPTION_KEY=generate-a-secure-encryption-key-at-least-32-chars
APP_SECRET=generate-a-secure-app-secret-at-least-32-chars

# =================================
# ENVIRONMENT
# =================================
NODE_ENV=development
DEBUG=false
DEVELOPMENT_MODE=false
MOCK_AI_RESPONSES=false

# =================================
# SECURITY CONFIGURATION
# =================================
FORCE_HTTPS=true
SECURE_COOKIES=true
TRUST_PROXY=true
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE

# Content Security Policy
CSP_ENABLED=true
HSTS_ENABLED=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
MONICA_RATE_LIMIT=100
MONICA_RATE_WINDOW=60000
MONICA_MAX_CONCURRENT=10

# API Security
API_RATE_LIMIT=200
API_TIMEOUT=30000
MAX_REQUEST_SIZE=1mb
MAX_JSON_SIZE=10mb

# =================================
# FEATURE FLAGS
# =================================
FEATURE_AI_ORCHESTRATION=true
FEATURE_COLLECTIVE_WISDOM=true
FEATURE_PERSONAL_ANALYSIS=true
FEATURE_POETIC_SUBLIMATION=true
FEATURE_MONICA_UNLIMITED=true
FEATURE_MONICA_FALLBACK=true
FEATURE_MULTI_AI_SIMULATION=true

# =================================
# PERFORMANCE OPTIMIZATION
# =================================
MONICA_CACHE_ENABLED=true
MONICA_CACHE_TTL=300000
MONICA_BATCH_REQUESTS=true
MONICA_BATCH_SIZE=5
MONICA_BATCH_DELAY=50
MONICA_SMART_RETRY=true
MONICA_RETRY_EXPONENTIAL=true

# =================================
# DATABASE CONFIGURATION
# =================================
# MongoDB (Primary Database)
VITE_MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# PostgreSQL (Backup)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nightgod_tarot
DB_USER=your-db-user
DB_PASSWORD=your-secure-db-password
DB_SSL_MODE=require
DB_CONNECTION_LIMIT=20
DB_POOL_MIN=5

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000

# =================================
# PAYMENT SYSTEM
# =================================
# Stripe
VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Buy Me a Coffee
BUYMEACOFFEE_PROFILE_URL=https://buymeacoffee.com/yourprofile
BUYMEACOFFEE_WEBHOOK_SECRET=your-buymeacoffee-webhook-secret

# iPass Money
IPASS_MERCHANT_ID=your-merchant-id
IPASS_API_KEY=your-ipass-api-key
IPASS_API_SECRET=your-ipass-api-secret
IPASS_ENVIRONMENT=production
IPASS_WEBHOOK_URL=/api/webhooks/ipass
IPASS_RETURN_URL=/payment/success
IPASS_CANCEL_URL=/payment/cancel

# =================================
# STORAGE & ASSETS
# =================================
UPLOAD_PATH=/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=png,jpg,jpeg,gif,webp,svg
CDN_URL=https://cdn.yourdomain.com
STATIC_URL=https://static.yourdomain.com

# =================================
# LOGGING & MONITORING
# =================================
LOG_LEVEL=info
LOG_FILE=logs/nightgod.log
LOG_MAX_SIZE=52428800
LOG_MAX_FILES=10
LOG_COMPRESS=true

# Error Reporting
ERROR_REPORTING_ENABLED=true
SENTRY_DSN=your-sentry-dsn-here

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_ENABLED=true

# =================================
# WEBHOOK SYSTEM
# =================================
WEBHOOK_PORT=3002
WEBHOOK_SECRET=generate-a-secure-webhook-secret
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3

# =================================
# MULTI-LANGUAGE SUPPORT
# =================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh-TW,zh-CN,ja,ko,es,fr,de
TRANSLATION_CACHE_TTL=86400000

# =================================
# DEPLOYMENT CONFIGURATION
# =================================
SERVER_HOST=0.0.0.0
SERVER_PORT=3001
CLUSTER_MODE=true
CLUSTER_WORKERS=auto

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
UPTIME_MONITORING=true

# =================================
# BACKUP & RECOVERY
# =================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION=true

# =================================
# TAROT SYSTEM CONFIGURATION
# =================================
TOTAL_TAROT_CARDS=78
DEFAULT_SPREAD_SIZE=3
MAX_SPREAD_SIZE=10
READING_TIMEOUT=300000
INTERPRETATION_CACHE_TTL=1800000

# Sacred Timing
LUNAR_CALCULATIONS=true
ASTROLOGICAL_TIMING=true
SACRED_GEOMETRY_ENABLED=true