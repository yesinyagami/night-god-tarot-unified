# Production Environment Variables
# DO NOT COMMIT THIS FILE TO GIT

# API Keys (use GitHub Secrets in production)
VITE_MONICA_API_KEY=${MONICA_API_KEY}
VITE_DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}
VITE_OPENWEATHER_API_KEY=${OPENWEATHER_API_KEY}
VITE_NEWS_API_KEY=${NEWS_API_KEY}

# API Endpoints
VITE_API_BASE_URL=https://api.nightgodtarot.com
VITE_MONICA_API_URL=https://openapi.monica.im
VITE_WEATHER_API_URL=https://api.openweathermap.org/data/2.5
VITE_NEWS_API_URL=https://newsapi.org/v2

# Features
VITE_ENABLE_AI_READINGS=true
VITE_ENABLE_VOICE_SYNTHESIS=true
VITE_ENABLE_IMAGE_GENERATION=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PAYMENT=true

# Security
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000
VITE_SESSION_TIMEOUT=3600000

# Deployment
VITE_DEPLOYMENT_ENV=production
VITE_CDN_URL=https://cdn.nightgodtarot.com
VITE_SENTRY_DSN=${SENTRY_DSN}